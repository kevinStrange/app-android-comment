<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <FrameLayout
        android:id="@+id/nv_leftLayoutContainer"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        tools:ignore="RtlHardcoded">

        <TextView
            android:id="@+id/nv_leftTextView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="start|center_vertical"
            android:minWidth="60dp"
            android:paddingLeft="@dimen/sp_text_size_15"
            android:textColor="@color/c_464646"
            android:textSize="@dimen/sp_text_size_14"
            tools:ignore="RtlSymmetry" />

        <ImageView
            android:id="@+id/nv_leftImageView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="20dp"
            android:scaleType="centerInside"
            android:visibility="gone"
            tools:ignore="ContentDescription" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/nv_rightLayoutContainer"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        tools:ignore="RelativeOverlap,RtlHardcoded">

        <TextView
            android:id="@+id/nv_rightTextView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:drawablePadding="6dp"
            android:gravity="end|center_vertical"
            android:minWidth="50dp"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_text_size_14"
            tools:ignore="RtlSymmetry" />

        <ImageView
            android:id="@+id/nv_rightImageView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:paddingLeft="20dp"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:scaleType="centerInside"
            android:visibility="gone"
            tools:ignore="ContentDescription" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/nv_centerLayoutContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_marginStart="100dp">

        <TextView
            android:id="@+id/nv_centerTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:ellipsize="end"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="@color/c_333333"
            android:textSize="@dimen/sp_text_size_16" />

        <ImageView
            android:id="@+id/nv_centerImageView"
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:layout_gravity="center_vertical"
            android:visibility="gone"
            tools:ignore="ContentDescription" />
    </FrameLayout>



</RelativeLayout>